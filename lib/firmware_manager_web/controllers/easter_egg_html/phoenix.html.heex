      <div class="flames">
        <!-- Flames will be added by JavaScript -->
      </div>
    </div>
    <div class="message">You found the Phoenix!</div>
    <a href="/" class="back-link">Return to Diablo Firmware Manager</a>
  </div>

  <script>
    // Create random flames
    const flamesContainer = document.querySelector('.flames');
    const numFlames = 20;
    
    for (let i = 0; i < numFlames; i++) {
      const flame = document.createElement('div');
      flame.classList.add('flame');
      
      // Random position
      const top = Math.random() * 100;
      const left = Math.random() * 100;
      
      // Random size
      const size = 20 + Math.random() * 80;
      
      // Random animation delay
      const delay = Math.random() * 5;
      
      flame.style.top = `${top}%`;
      flame.style.left = `${left}%`;
      flame.style.width = `${size}px`;
      flame.style.height = `${size}px`;
      flame.style.animationDelay = `${delay}s`;
      
      flamesContainer.appendChild(flame);
    }
    
    // Add subtle movement to the phoenix
    const phoenix = document.querySelector('.phoenix');
    let angle = 0;
    
    function movePhoenix() {
      angle += 0.01;
      const x = Math.sin(angle) * 5;
      const y = Math.cos(angle) * 3;
      phoenix.style.transform = `translate(${x}px, ${y}px)`;
      requestAnimationFrame(movePhoenix);
    }
    
    movePhoenix();
  </script>
</div>
