<div class="bg-black min-h-screen pt-10">
  <style>
    .phoenix-container {
      width: 300px;
      height: 300px;
      margin: 0 auto;
      position: relative;
    }
    .phoenix {
      width: 100%;
      height: 100%;
      fill: #ff4500;
    }
    .flames {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
    }
    .flame {
      position: absolute;
      background: radial-gradient(ellipse at center, rgba(255,69,0,0.8) 0%, rgba(255,69,0,0) 70%);
      border-radius: 50%;
      opacity: 0;
      animation: flicker 3s infinite alternate;
    }
    @keyframes flicker {
      0%, 100% { opacity: 0.2; transform: scale(0.8); }
      50% { opacity: 0.7; transform: scale(1.2); }
    }
    .message {
      color: white;
      margin-top: 30px;
      font-size: 24px;
      opacity: 0;
      animation: fadeIn 2s forwards 1s;
    }
    @keyframes fadeIn {
      to { opacity: 1; }
    }
    .back-link {
      margin-top: 20px;
      color: #ff4500;
      text-decoration: none;
      font-size: 16px;
      opacity: 0;
      animation: fadeIn 2s forwards 2s;
      display: inline-block;
      padding: 8px 16px;
      border: 1px solid #ff4500;
      border-radius: 4px;
      transition: all 0.3s ease;
    }
    .back-link:hover {
      background-color: #ff4500;
      color: #000;
    }
    .phoenix-path {
      animation: glow 3s infinite alternate;
    }
    @keyframes glow {
      0% { filter: drop-shadow(0 0 2px rgba(255,69,0,0.7)); }
      100% { filter: drop-shadow(0 0 10px rgba(255,69,0,0.9)); }
    }
    .wing {
      transform-origin: center;
      animation: flap 6s infinite ease-in-out;
    }
    .wing-left {
      transform-origin: 40% 50%;
    }
    .wing-right {
      transform-origin: 60% 50%;
    }
    @keyframes flap {
      0%, 100% { transform: rotate(0deg); }
      25% { transform: rotate(-5deg); }
      75% { transform: rotate(5deg); }
    }
  </style>

  <div class="container mx-auto text-center">
